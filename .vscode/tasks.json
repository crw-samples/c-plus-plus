{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build current algorithm",
            "type": "shell",
            "command": "rm -f ${fileDirname}/bin.out && g++ -g ${file} -o ${fileDirname}/bin.out && echo 'Build complete'",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Run current algorithm",
            "type": "shell",
            "command": "${fileDirname}/bin.out",
            "problemMatcher": [],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}